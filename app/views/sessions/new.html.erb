<h1>登录</h1>

<% form_tag session_path do -%>

  <p>
    <%= label_tag '登录名' %><br />
    <%= text_field_tag 'login', @login %>
  </p>

  <p>
    <%= label_tag '密码' %><br/>
    <%= password_field_tag 'password', nil %>
  </p>

  <p>
    <%= label_tag 'remember_me', '在本机记住登录状态' %>
    <%= check_box_tag 'remember_me', '1', true %>
  </p>

  <p>
    <%= submit_tag '登录' %>
  </p>

<% end -%>
